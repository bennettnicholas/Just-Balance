<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustBalance.Views.AddTransaction"
             xmlns:vm="clr-namespace:JustBalance.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="White" >
    
    <ContentPage.BindingContext>
        <vm:AddTransactionViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#7a0d21</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>


        <ScrollView>
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="5">

                <Label Text="Date" FontSize="16" TextColor="{StaticResource Primary}" HorizontalTextAlignment="Center" Padding="0,0,0,0" />
                <DatePicker x:Name="startDatePicker"
                    Format="D"
                    Margin="0, 0, 0, 30"
                    DateSelected="OnDateSelected" />

                <Label Text="Who Owes Money?" FontSize="16" Padding="0,0,0,0" TextColor="{StaticResource Primary}" HorizontalTextAlignment="Center" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" 
                            x:Name="leftButton"
                            Margin="0,0,0,0" Text="GEORGE"
                            Clicked="LeftButtonClicked"
                            TextColor="{StaticResource Primary}" BackgroundColor="LightGray" CornerRadius="-1" InputTransparent="False" AutomationProperties.IsInAccessibleTree="False" />
                    <Button Grid.Column="1"
                            x:Name="rightButton"
                            Margin="0,0,0,0" Text="NICK"
                            Clicked="RightButtonClicked"
                            TextColor="{StaticResource Primary}" BackgroundColor="LightGray" CornerRadius="-1" InputTransparent="False" AutomationProperties.IsInAccessibleTree="False" />
                </Grid>

                <Entry x:Name="addCost" Placeholder="How Much?" PlaceholderColor="{StaticResource Primary}" Keyboard="Numeric" ReturnType="Next" />
                <Entry x:Name="addTitle" Placeholder="For What?" PlaceholderColor="{StaticResource Primary}" />
                <Entry x:Name="addDescription" VerticalTextAlignment="Start" Placeholder="Description (Optional)" PlaceholderColor="{StaticResource Primary}" HeightRequest="212" />

                <Button Margin="0,10,0,0" Text="Submit"
                        Clicked="SubmitTransaction"
                        TextColor="{StaticResource Primary}" BackgroundColor="LightGray" CornerRadius="-1" InputTransparent="False" AutomationProperties.IsInAccessibleTree="False" />

            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
