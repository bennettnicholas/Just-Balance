<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustBalance.Views.AboutPage"
             xmlns:vm="clr-namespace:JustBalance.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <Entry x:Name="UserNameText" Placeholder="NICK or GEORGE" PlaceholderColor="Olive" />
            <Button Margin="0,0,0,0" Text="Submit"
                            Clicked="SubmitButtonOnClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White" 
                            />
        </StackLayout>
    </Grid>

</ContentPage>
